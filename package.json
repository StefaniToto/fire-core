{
  "name": "code-from-root",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx run-many --target=serve",
    "start:all": "pnpm --stream -r start ",
    "start:dev": "pnpm --stream -r run start:dev",
    "dev": "admin dev",
    "test": "ng test",
    "write:env": "ngx-scripts env npm_package_version",
    "clean": "rm -rf .parcel-cache && pnpm -r run clean",
    "lint": "npm run lint:js -- --fix && npm run lint:css -- --fix && npm run lint:format",
    "format": "npx prettier \"src/**/*.{js,jsx,ts,tsx,html,css,scss}\" --write",
    "prepare": "husky install",
    "prettier": "prettier --config .prettierrc --check \"apps/**/*.{ts,css,html}\"",
    "prettier:check": "prettier --list-different \"./{src,e2e}/**/*.{ts,js,html,scss}\"",
    "precommit": "lint-staged",
    "generate": "ng generate"
  },
  "private": true,
  "dependencies": {
    "@angular-eslint/eslint-plugin": "^16.0.2",
    "@angular-eslint/template-parser": "^16.0.2",
    "@angular/animations": "16.0.1",
    "@angular/cdk": "16.0.1",
    "@angular/common": "16.0.1",
    "@angular/compiler": "16.0.1",
    "@angular/core": "16.0.1",
    "@angular/forms": "16.0.1",
    "@angular/platform-browser": "16.0.1",
    "@angular/platform-browser-dynamic": "16.0.1",
    "@angular/router": "16.0.1",
    "@nestjs/common": "9.1.1",
    "@nestjs/core": "9.1.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "9.1.1",
    "@nrwl/linter": "^16.2.1",
    "@prisma/client": "^4.14.1",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "passport-jwt": "^4.0.1",
    "primeng": "16.0.0-rc.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.8.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^11.0.0",
    "zone.js": "0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "16.0.1",
    "@angular-eslint/eslint-plugin-template": "16.0.1",
    "@angular/compiler-cli": "16.0.1",
    "@nestjs/testing": "9.1.1",
    "@nrwl/eslint-plugin-nx": "16.1.4",
    "@nrwl/jest": "16.1.4",
    "@nrwl/webpack": "16.1.4",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-preset-angular": "13.1.1",
    "lint-staged": "^13.2.2",
    "nx": "16.1.4",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.2",
    "stylelint-config-standard-scss": "^9.0.0",
    "tslib": "^2.5.0",
    "typescript": "5.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts,json,css,scss,html}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "ng build --prod"
    }
  }
}
